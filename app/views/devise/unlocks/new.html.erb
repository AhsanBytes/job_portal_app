<h2 class="text-2xl font-bold mb-6">Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource, class: "text-red-600" %>

  <div class="field mb-4">
    <%= f.label :email, class: "block text-gray-700 font-medium" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-1/2 shadow-sm border border-gray-300 rounded-md p-2 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions", class: "bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600" %>
  </div>
<% end %>

<%= render "devise/shared/links", class: "mt-4" %>
