<%= form_with(model: JobApplicant.new, url: job_applicants_path, local: true, html: { multipart: true }) do |form| %>
  <%= form.hidden_field :job_id, value: @job.id %>

  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :email %>
  <%= form.email_field :email %>

  <%= form.label :phone_no %>
  <%= form.text_field :phone_no %>

  <%= form.label :resume %>
  <%= form.file_field :resume %>

  <%= form.label :cover_letter %>
  <%= form.text_area :cover_letter %>

  <%= form.submit 'Apply' %>
<% end %>
